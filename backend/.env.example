# SERVER
PORT=4000
NODE_ENV=development
CORS_ORIGIN=*

# JWT
JWT_SECRET=your_jwt_secret_change_this_in_production
JWT_EXPIRES_IN=1h

# DATABASE
DB_ENGINE=mongo

# MONGO
DB_ENGINE=mongo
MONGO_URI=mongodb://<username>:<pass>@localhost:27017/askyourdb?authSource=admin

# POSTGRES
PG_HOST=postgres
PG_PORT=5432
PG_USER=postgres
PG_PASSWORD=postgres
PG_DB=askyourdb

# OPENAI / LLM
LLM_PROVIDER=openai
OPENAI_API_KEY=sk-REPLACE_ME
OPENAI_MODEL=gpt-4o-mini
GROQ_API_KEY=gsk_REPLACE_ME
GROQ_MODEL=llama-3.3-70b-versatile

# RATE LIMITING
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=60

# QUERY LIMITS
MAX_QUERY_LIMIT=100

# MONITORING (Optional)
# PROMETHEUS_ENABLED=true
