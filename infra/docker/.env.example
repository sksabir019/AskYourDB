# Production Environment Variables Template
# Copy this file to .env and fill in your actual values

# ============================================
# Database Configuration
# ============================================
DB_ENGINE=mongo                    # mongo or postgres
MONGO_USERNAME=admin
MONGO_PASSWORD=your_secure_mongo_password_here
MONGO_DB=askyourdb

PG_USER=postgres
PG_PASSWORD=your_secure_postgres_password_here
PG_DB=askyourdb

# ============================================
# Application Security
# ============================================
JWT_SECRET=your_very_secure_random_jwt_secret_here_minimum_32_chars
JWT_EXPIRES_IN=7d

# ============================================
# LLM Provider Configuration
# ============================================
LLM_PROVIDER=groq                  # openai or groq

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini

# Groq Configuration
GROQ_API_KEY=your_groq_api_key_here
GROQ_MODEL=llama-3.3-70b-versatile

# ============================================
# Application Configuration
# ============================================
CORS_ORIGIN=https://yourdomain.com
FRONTEND_PORT=80

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000        # 15 minutes in milliseconds
RATE_LIMIT_MAX=100                 # Max requests per window

# ============================================
# Frontend Configuration
# ============================================
VITE_API_URL=/api/v1
